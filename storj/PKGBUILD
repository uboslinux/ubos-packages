developer=https://storj.io/
url=https://github.com/storj/storj
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.29.3
pkgrel=3
pkgdesc="Storj V3 Network"
arch=('any')
license=("AGPL3")
makedepends=(
    'go'
)
case "$(uname -m)" in
"x86_64")
     _platform=amd64
    sha512sums=(
